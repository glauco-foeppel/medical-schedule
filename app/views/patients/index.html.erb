<p id="notice"><%= notice %></p>

<div>
  <div class="row">
    <div class="col-sm">
      <h1>Pacientes</h1>
    </div>
    <div class="col-sm text-right mt-2">
      <%= link_to 'Cadastrar novo Paciente', new_patient_path, class: "btn btn-success text-white" %>
    </div>  
  </div>
</div>

<div>
  <div class="row">
    <div class="col-sm text-right font-weight-light">
      Total de registros: <strong><%= @patients.count %></strong>
    </div>
  </div>
</div>

<table class="table table-hover table-default">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data de Aniversario</th>
      <th>Cpf</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.birth_date %></td>
        <td><%= patient.cpf %></td>
        <td width=10>
          <%= link_to edit_patient_path(patient) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td width=10>
          <%= link_to patient, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
