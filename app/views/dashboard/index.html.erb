<div>
  <div class="row">
    <div class="col-sm">
      <h1>Consultas</h1>
    </div>
    <div class="col-sm text-right mt-2">
      <%= link_to 'Novo Agendamento', new_appointment_path, class: "btn btn-success text-white" %>
    </div>  
  </div>
</div>

<div>
  <div class="row">
    <div class="col-sm text-right font-weight-light">
      Total de registros: <strong><%= @appointments.count %></strong>
    </div>
  </div>
</div>

<table class="table table-hover table-default">
  <thead>
    <tr>
      <th>Medico</th>
      <th>Paciente</th>
      <th>Inicio</th>
      <th>Final</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.doctor.name %></td>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.starts_at.strftime("%d/%m/%Y %H:%I") %></td>
        <td><%= appointment.ends_at.strftime("%d/%m/%Y %H:%I") %></td>
        <td width=10>
            <%= link_to appointment do %>
                <i class="fas fa-eye"></i>
            <% end %>
        </td>
        <td width=10>
            <%= link_to edit_appointment_path(appointment) do %>
                <i class="fas fa-edit"></i>
            <% end %>
        </td>
        <td width=10>
            <%= link_to appointment, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="far fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
