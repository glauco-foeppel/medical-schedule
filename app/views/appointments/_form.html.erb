<%= form_with(model: appointment, local: true) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="register-appointment">
    <div class="row">
      <div class="col m-1">
        <div class="form-group">
          <%= form.label "Paciente" %>
          <%= select(:appointment, "patient_id", Patient.order(:name).collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control") %>
        </div>
      </div>
      <div class="col m-1">
        <div class="form-group">
          <%= form.label "Medico" %>
          <%= select(:appointment, "doctor_id", Doctor.order(:name).collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control") %>
        </div>
      </div>
      <div class="col m-1">
        <div class="form-group">
          <%= form.label "Horario" %>
          <%= select(:appointment, "starts_at", range_hours.map{|date| date.strftime("%H:%M")}, { include_blank: true }, class: "form-control") %>
        </div>
      </div>
    </div>
  
    <div class="row">
      <div class="col text-right mr-1">
        <%= form.submit "Agendar", class: "btn btn-success" %>
        <%= link_to 'Voltar', appointments_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>
