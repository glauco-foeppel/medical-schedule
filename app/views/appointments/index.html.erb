<p id="notice"><%= notice %></p>

<div>
  <div class="row">
    <div class="col-sm">
      <h1>Agendamentos</h1>
    </div>
    <div class="col-sm text-right mt-2">
      <%= link_to 'Novo Agendamento', new_appointment_path, class: "btn btn-success text-white" %>
    </div>  
  </div>
</div>

<table class="table table-hover table-default">
  <thead>
    <tr>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Patient</th>
      <th>Doctor</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.starts_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= appointment.ends_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.doctor.name%></td>
        <td width=10>
          <%= link_to edit_appointment_path(appointment) do %>
            <i class="fas fa-edit"></i>
          <% end %>  
        </td>
        <td width=10>
          <%= link_to appointment, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>  
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>